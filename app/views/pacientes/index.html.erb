



<%= link_to "New paciente", new_paciente_path %>
<div class="card">
  <div class="card-header">
    <h4 class="card-title">Buscar por Data</h4>
    <div class="row">
      <div class="col-5">
        <label for="q_data_consulta_gteq">Data da Consulta (De)</label>
        <%= f.text_field :nome, class: "form-control" %>
      </div>
      <div class="col-5">
        <label for="q_data_consulta_gteq">Data da Consulta (De)</label>
        <%= f.text_field :created_at_gteq, class: "form-control" %>
      </div>
      <div class="col-5">
        <label for="q_data_consulta_lteq">Data da Consulta (Até)</label>
        <%= f.date_field :data_consulta_lteq, class: "form-control" %>
      </div>
      <div class="col-2">
        <label >Ações</label>
        <%= button_tag(type: 'submit', class: 'btn btn-sm mt-1 fs-2', style: 'background-color: #04DFC0; color: white;') do %>
          <i class="fas fa-search"></i> <!-- Adicione o ícone de busca aqui (Bootstrap Icons) -->
        <% end %>
        <%= link_to consulta_path, class: 'btn btn-primary btn-sm mt-1 fs-2' do %>
        <i class="fas fa-eraser"></i><!-- Adicione o ícone de busca aqui (Bootstrap Icons) -->
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title mb-0">Pacientes Cadastrados</h5>
  </div>
  <div class="table-responsive">
    <table class="table text-nowrap no-wrap user-table mb-0">
      <thead>
        <tr>
          <th scope="col" class="border-0  ps-4">
            #
          </th>
          <th scope="col" class="border-0 ">
            Nome
          </th>
          <th scope="col" class="border-0 ">
            Médico
          </th>
          <th scope="col" class="border-0 ">
            Email
          </th>
          <th scope="col" class="border-0 ">
            Status
          </th>
          <th scope="col" class="border-0 ">
            Manage
          </th>
        </tr>
      </thead>
      <tbody>
        <% @pacientes.each do |f| %>
        <tr>
          <td class="ps-4"> <%= f.id %></td>
          <td>
            <div class="d-flex align-items-center">
              <img src="user-06.jpg" class="rounded  round-50">
              <div class="ms-3">
                <h6 class=" mb-0">
                  <%= f.nome %>
                </h6>
                <span class="text-muted">Texas, Unitedd states</span>
              </div>
            </div>
          </td>
          <td>
            <span>Visual Designer</span><br>
            <span>Past : teacher</span>
          </td>
          <td>
            <span>daniel@website.com</span><br>
            <span>999 - 444 - 555</span>
          </td>
          <td>
            <select class="form-select category-select border-0 bg-inverse" id="exampleFormControlSelect1">
              <option>Modulator</option>
              <option>Admin</option>
              <option>User</option>
              <option>Subscriber</option>
            </select>
          </td>
          <td>
            <a href="javascript:void(0)" class="text-info edit"> <i class="fas fa-edit"></i></iconify-icon>
            </a>
            <a href="javascript:void(0)" class="text-dark delete ms-2"><i
                class="fas fa-eye"></i></iconify-icon></a>
          </td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>